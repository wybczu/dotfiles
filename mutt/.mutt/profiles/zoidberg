set folder       = $HOME/Mail
set spoolfile    = +INBOX
set mbox_type    = Maildir
set mask         = !^\\.[^.]
set record       = +Sent
set postponed    = +Drafts
set trash        = +Trash
set mail_check   = 5
set pgp_sign_as  = 0x25AA83DFBD551FBB!

mailboxes "+INBOX" `$HOME/.mutt/scripts/list-mailboxes.py $HOME/Mail`

