
set mailcap_path = $HOME/.mutt/profiles/bender.mailcap
set folder       = "~/Maildir/"
set spoolfile    = "~/Maildir/"

mailboxes ! + `\\

 for file in ~/Maildir/.*; do \\

   box=$(basename "$file"); \\

   if [ ! "$box" = '.' -a ! "$box" = '..' -a ! "$box" = '.customflags' \\

       -a ! "$box" = '.subscriptions' ]; then \\

     echo -n "\"+$box\" "; \\

   fi; \\

 done`

