
set folder     = $HOME/Mail
set spoolfile  = +INBOX

mailboxes "+INBOX" `\\

 for file in ~/Mail/*; do \\

   box=$(basename "$file"); \\

   if [ ! "$box" = '.' -a ! "$box" = '..' -a ! "$box" = '.customflags' \\

       -a ! "$box" = '.subscriptions' -a ! "$box" = 'INBOX' ]; then \\

     echo -n "\"+$box\" "; \\

   fi; \\

 done`

# vim: ft=muttrc
